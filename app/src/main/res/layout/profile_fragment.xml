<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/image_layout"
            android:layout_marginBottom="@dimen/margin_25">

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/side_nav_bar"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/logo"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/margin_25"/>
                <com.rebook.nma.widget.ZawgyiTextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_medium"
                    android:text=""
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_small"
                    android:fontFamily="@font/aileron_regular"/>
                <com.rebook.nma.widget.ZawgyiTextView
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_medium"
                    android:text="aungthihakyaw@gmail.com"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_small"
                    android:fontFamily="@font/aileron_regular"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/red"/>

            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_15"
                android:paddingBottom="@dimen/margin_15"
                android:layout_below="@id/layout1">
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/red"/>
                <android.support.v7.widget.CardView
                    android:id="@+id/current_course_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_small">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/messenger_bubble_large_blue"
                        />
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Current Courses"
                        android:textColor="@color/dark"
                        android:paddingLeft="@dimen/margin_small"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blace_right_arrow"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/history_course_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_small">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/messenger_bubble_large_blue"/>
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="History Courses"
                        android:textColor="@color/dark"
                        android:paddingLeft="@dimen/margin_small"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blace_right_arrow"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/attendance_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_small">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/messenger_bubble_large_blue"/>
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:textColor="@color/dark"
                        android:paddingLeft="@dimen/margin_small"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blace_right_arrow"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_small">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/messenger_bubble_large_blue"/>
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Messages"
                        android:textColor="@color/dark"
                        android:paddingLeft="@dimen/margin_small"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blace_right_arrow"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/assignment_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_small">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/messenger_bubble_large_blue"/>
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Assignment"
                        android:textColor="@color/dark"
                        android:paddingLeft="@dimen/margin_small"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blace_right_arrow"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/mark_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="1dp"
                    android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_small">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/messenger_bubble_large_blue"/>
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Mark"
                        android:textColor="@color/dark"
                        android:paddingLeft="@dimen/margin_small"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blace_right_arrow"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/announcement_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                android:layout_marginBottom="@dimen/margin_small">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10"
                    android:layout_margin="@dimen/margin_small">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:src="@drawable/messenger_bubble_large_blue"/>
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:text="Announcement"
                        android:textColor="@color/dark"
                        android:paddingLeft="@dimen/margin_small"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        android:src="@mipmap/blace_right_arrow"
                        android:layout_gravity="end"
                        android:padding="@dimen/margin_small"/>
                </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
    </ScrollView>
        </RelativeLayout>

</FrameLayout>