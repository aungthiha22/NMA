<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tabs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rebook.nma.ui.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@color/white"
    android:id="@+id/content_main">

    <include layout="@layout/slider_layout"
        android:visibility="visible"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation"
        android:background="@color/white"
        app:itemIconTint="@drawable/navigation_background"
        app:itemTextColor="@drawable/navigation_background"
        android:defaultFocusHighlightEnabled="true"/>

</android.support.constraint.ConstraintLayout>
