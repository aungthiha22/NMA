<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/list_background">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardElevation"
        app:cardCornerRadius="4dp"
        android:layout_margin="@dimen/margin_small"
        app:cardBackgroundColor="@color/cardview_light_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical"
            >
            <com.rebook.nma.widget.ZawgyiTextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Understand User's Behaviours"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_size_small"
                android:padding="@dimen/margin_medium"
                android:layout_gravity="center"
                android:gravity="center"/>
        <ImageView
            android:id="@+id/event_image"
            android:layout_below="@id/event_name"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:src="@drawable/course"
            android:layout_gravity="center"
            />

        <com.rebook.nma.widget.ZawgyiTextView
            android:id="@+id/event_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="03:03:00 - 03:03:00"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_size_tiny"
            android:padding="@dimen/margin_medium"/>

        <com.rebook.nma.widget.ZawgyiTextView
            android:id="@+id/event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_little"
            android:text="Yangon"
            android:visibility="gone"
            android:textSize="@dimen/font_size_tiny"
            android:padding="@dimen/margin_medium"/>

        <com.rebook.nma.widget.ZawgyiTextView
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start with a blank slate or choose from over 500 designer-made templates. With the worldâ€™s most "
            android:padding="@dimen/margin_medium"
            android:textSize="@dimen/font_size_tiny"
            android:maxLines="2"/>
            <com.rebook.nma.widget.ZawgyiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_detail"
                android:background="@color/blue"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:padding="@dimen/margin_10"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>