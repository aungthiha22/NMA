<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/announcement_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_25"
            android:layout_marginTop="@dimen/margin_25">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rebook.nma.widget.ZawgyiTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:padding="@dimen/margin_medium"
                    />
                <com.rebook.nma.widget.ZawgyiTextView
                    android:id="@+id/announcement_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_medium"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.rebook.nma.widget.ZawgyiTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Due Date"
                    android:padding="@dimen/margin_medium"
                    />
                <com.rebook.nma.widget.ZawgyiTextView
                    android:id="@+id/announcement_date"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_medium"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25"
                android:layout_marginBottom="@dimen/margin_25">
                <com.rebook.nma.widget.ZawgyiTextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="File"
                    android:padding="@dimen/margin_medium"
                    />
                <com.andexert.library.RippleView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.CardView
                        android:id="@+id/announcement_download_cardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/hint_color"
                        app:cardElevation="3dp"
                        app:cardCornerRadius="2dp">
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download File"
                            android:padding="@dimen/margin_medium"/>
                    </android.support.v7.widget.CardView>
                </com.andexert.library.RippleView>
            </LinearLayout>
            <com.rebook.nma.widget.ZawgyiTextView
                android:id="@+id/announcement_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_25"/>
        </LinearLayout>
    </ScrollView>
    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/detail_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        app:mk_type="TwinFishesSpinner"
        app:mk_color="#0e29f2"
        android:visibility="gone"/>
</RelativeLayout>