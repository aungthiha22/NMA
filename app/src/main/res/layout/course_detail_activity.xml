<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"/>
        <ScrollView
            android:id="@+id/detail_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_bottom">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_bottom">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.rebook.nma.widget.ZawgyiTextView
                    android:id="@+id/course_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Certificate In English Speaking"
                    android:gravity="center"
                    android:textSize="@dimen/font_size_medium"
                    android:textColor="@color/dark"
                    android:padding="@dimen/margin_10"/>

                    <ImageView
                        android:id="@+id/course_detail_image"
                        android:layout_below="@id/course_detail_title"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:src="@drawable/course"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/margin_10"
                        android:visibility="gone"/>
                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_below="@id/course_detail_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/red"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10"
                        android:background="@color/white">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/student"
                                android:layout_gravity="center"/>
                            <com.rebook.nma.widget.ZawgyiTextView
                                android:id="@+id/course_detail_student_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/margin_medium"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/font_size_small"/>
                        </LinearLayout>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STUDENTS"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/font_size_tiny"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10"
                        android:background="@color/white">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/customer_reviews"/>
                            <com.rebook.nma.widget.ZawgyiTextView
                                android:id="@+id/course_detail_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.0"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/margin_medium"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/font_size_small"/>
                        </LinearLayout>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REVIEWS(0)"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/font_size_tiny"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_10"
                        android:background="@color/white">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/duration_clock"/>
                            <com.rebook.nma.widget.ZawgyiTextView
                                android:id="@+id/course_detail_hours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="40"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="@dimen/margin_medium"
                                android:textColor="@color/dark"
                                android:textSize="@dimen/font_size_small"/>
                        </LinearLayout>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEARNING HOURS"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/font_size_tiny"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_instructor"
                    android:layout_below="@id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/popular_course"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin_10"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="@dimen/margin_25">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/date"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/date"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_10"
                            android:textColor="@color/dark"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/font_size_medium"
                            android:gravity="center"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:id="@+id/course_detail_date"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="29 October 2018"
                            android:textColor="@color/dark"
                            android:padding="@dimen/margin_10"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/fees"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/fees"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_10"
                            android:textColor="@color/dark"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/font_size_medium"
                            android:gravity="center"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:id="@+id/course_detail_fees"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="၂၀၀၀၀၀ က်ပ္"
                            android:textColor="@color/dark"
                            android:padding="@dimen/margin_10"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/margin_15">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/clock"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/time"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_10"
                            android:textColor="@color/dark"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/font_size_medium"
                            android:gravity="center"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:id="@+id/course_detail_time"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text="၉ နာရီ မွ ၁၁ နာရီ ထိ"
                            android:textColor="@color/dark"
                            android:padding="@dimen/margin_10"/>
                    </LinearLayout>

                    <com.rebook.nma.widget.ZawgyiTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Instructor"
                        android:textSize="@dimen/font_size_small"
                        android:textColor="@color/dark"
                        android:padding="@dimen/margin_10"
                        android:layout_marginLeft="@dimen/margin_25"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="30dp"
                            android:src="@mipmap/certificate"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:layout_marginLeft="35dp"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="wrap_content"
                            android:text="@string/certificate"
                            android:gravity="center"
                            android:paddingLeft="@dimen/margin_10"
                            android:textColor="@color/blue"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="@dimen/font_size_medium"
                            android:gravity="center"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:id="@+id/course_detail_certificate"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/colorPrimary"
                            android:padding="@dimen/margin_10"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_small"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/margin_25"
                        android:layout_marginBottom="@dimen/margin_10">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/course_detail_instructor_image"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerCrop"
                            android:src="@drawable/course"/>
                        <com.rebook.nma.widget.ZawgyiTextView
                            android:id="@+id/course_detail_instructor_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sir Han Htoo 1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/margin_25"
                            android:textSize="@dimen/font_size_small"/>
                    </LinearLayout>

                </LinearLayout>
                 <com.rebook.nma.widget.ZawgyiTextView
                     android:id="@+id/course_detail_description"
                     android:layout_below="@id/layout_instructor"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:padding="@dimen/margin_15"
                     android:text=""/>


                <LinearLayout
                    android:layout_below="@id/course_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_20">
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:id="@+id/see_curriculum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="CURRICULUM"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/margin_10"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>
                    <com.rebook.nma.widget.ZawgyiTextView
                        android:id="@+id/see_reviews"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="REVIEWS"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        android:padding="@dimen/margin_10"/>
                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/detail_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        app:mk_type="TwinFishesSpinner"
        app:mk_color="#0e29f2"
        android:visibility="gone"/>
</RelativeLayout>