<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/event_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_bottom">
        <ImageView
            android:id="@+id/event_detail_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/course"
            android:layout_gravity="center"/>
        <com.rebook.nma.widget.ZawgyiTextView
            android:id="@+id/event_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/dark"
            android:textSize="@dimen/font_size_small"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"/>
        <com.rebook.nma.widget.ZawgyiTextView
            android:id="@+id/event_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_size_small"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"/>
        <com.rebook.nma.widget.ZawgyiTextView
            android:id="@+id/event_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/dark_little"
            android:textSize="@dimen/font_size_small"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"/>
        <com.rebook.nma.widget.ZawgyiTextView
            android:id="@+id/event_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time"
            android:textColor="@color/dark_little"
            android:textSize="@dimen/font_size_small"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_medium"
            android:padding="@dimen/margin_medium"/>
    </LinearLayout>
    <com.tuyenmonkey.mkloader.MKLoader
        android:id="@+id/event_detail_loading"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        app:mk_type="TwinFishesSpinner"
        app:mk_color="#0e29f2"
        android:visibility="gone"/>
</RelativeLayout>